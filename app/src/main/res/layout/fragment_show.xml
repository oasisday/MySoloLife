<?xml version="1.0" encoding="utf-8" ?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    스터디 그룹-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mysololife.example.sololife.fragments.GroupFragment">


        <TextView
            android:id="@+id/fragmentName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/maincolor_two"
            android:gravity="center"
            android:text="Study Room"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:ignore="MissingConstraints"></TextView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/fragmentName"
            >


            <ListView
                android:id="@+id/gotoBoardListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="multipleChoice"
                android:clipToPadding="false"
                android:divider="@color/white"
                android:dividerHeight="8dp"
                android:padding="10dp"
                android:layout_marginBottom="45dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/CardBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/plusbtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>