<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp">

    <TextView
        android:id="@+id/titleArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Posts"
        android:textSize="22dp"
        android:textColor="#011f5b"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="30dp">

        <ImageView
            android:layout_width="380dp"
            android:layout_height="350dp"
            android:src="@drawable/latest_post"
            android:paddingTop="40dp"
            android:paddingLeft="20dp"/>

        <ImageView
            android:id="@+id/i1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/profile"/>

        <TextView
            android:id="@+id/nameArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jonathan Warren"
            android:textSize="21dp"
            android:textColor="#011f5b"
            android:textStyle="bold"
            android:layout_toRightOf="@id/i1"
            android:layout_marginLeft="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/likes"
                android:layout_alignParentRight="true"
                android:layout_marginTop="320dp"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp">

        <ImageView
            android:id="@+id/i2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/chat_msg"/>

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="16dp"
            android:textColor="#011f5b"
            android:textStyle="bold"
            android:layout_toRightOf="@id/i2"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Really love what i do. Thanks for checking out\nmy phone"
            android:textSize="12dp"
            android:textColor="#979797"
            android:textStyle="bold"
            android:layout_toRightOf="@id/i2"
            android:layout_below="@id/t2"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW ALL 2 REVIEWS"
            android:textSize="13dp"
            android:textColor="#011f5b"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:background="@drawable/comment_bg"
            android:text="TYPE YOUR COMMENT"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:layout_marginTop="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quick"
            android:textSize="20dp"
            android:textColor="#595959"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="around me"
            android:textSize="20dp"
            android:textColor="#595959"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/set"
            android:layout_marginLeft="70dp"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/dot"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>

</LinearLayout>