<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gitemView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:layout_margin="25dp"
    android:padding="15dp"
    android:background="@drawable/rounded_corner"
    android:outlineSpotShadowColor="#673AB7"
    android:outlineAmbientShadowColor="#673AB7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/gtitleArea"
        android:textStyle="bold"
        android:textColor="#311B92"
        android:textSize="25sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gcontentArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Content"
            android:textColor="#4A148C"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/gtimeArea"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/gtimeArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Time"
            android:textColor="#4A148C"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#673AB7" />
</LinearLayout>